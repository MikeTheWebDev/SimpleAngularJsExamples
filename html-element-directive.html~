<html>
<div ng-app>
<h2>ng-repeat</h2>
    <hello-world/>
</div>

<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.14/angular.min.js"></script>
<script>
var app = angular.module('myapp', []);

app.directive('helloWorld', function() {
    return {
        restrict: 'AE',
        replace: 'true',
        template: '<h4>Hello World!!!!! </h3>'
    };
});
			             
</script>
</html>
